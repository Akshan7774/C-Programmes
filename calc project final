#include <iostream>
using namespace std;

int main() {
    string operation;
    double number1;
    double number2;

    cout << "-----------------------------" << endl;
    cout << "------ Basic Calculator -----" << endl;
    cout << "-----------------------------" << endl;

    while (true) {
        cout << "Select Operation:" << endl;
        cout << " Addition [1]" << endl;
        cout << " Subtraction [2]" << endl;
        cout << " Multiplication [3]" << endl;
        cout << " Division [4]" << endl;
        cout << " Remainder [5]" << endl;
        cout << " Exit [0]" << endl;
        cout << "Select operation by entering any of the numbers 0,1 - 5: "; 
        cin >> operation;

        
        if (operation == "0") {
            cout << "Exitting calculator" << endl;
            break;
        }

       
        cout << "Enter first operand: ";
        cin >> number1;

        cout << "Enter second operand: ";
        cin >> number2;

        if (operation == "1") {
            cout << number1 << " + " << number2 << " = " << number1 + number2 << endl;
        } else if (operation == "2") {
            cout <<number1<< " - " <<number2<< " = " << number1 - number2 <<endl;
        } else if (operation == "3") {
            cout <<number1<< " x " <<number2<< " = " << number1 * number2 <<endl;
        } else if (operation == "4") {
            if (number2 != 0)
                cout <<number1<< " / " <<number2<< " = " << number1 / number2 <<endl;
            else
                cout << " Division by 0 is undefined " << endl;
        } else if (operation == "5") {
            if (static_cast<int>(number2) != 0)
                cout << static_cast<int>(number1)<< " % "<< static_cast<int>(number2)<< " = "<<static_cast<int>(number1) % static_cast<int>(number2)<<endl;
            else
                cout << " Division by 0 is not permitted " << endl;
        } 
        
        else {
            cout << "Not a recognized operation. Please enter a number from 0 to 5, only integer values are supported." << endl;
        }
    }

    return 0;
}
