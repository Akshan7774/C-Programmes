        cout << " Error: All inputs must be positive numbers" << endl;
        return 0;
    }

cout<<" Show yearly breakdown (yes/no) : "; 
cin>>yearbreakdown; 

A = P * pow(1 + (r / 100), t);


ci1 =  P * pow(1 + (r / 100), 1);
ci2 =  P * pow(1 + (r / 100), 2);
ci3 =  P * pow(1 + (r / 100), 3);
ci4 =  P * pow(1 + (r / 100), 4);
