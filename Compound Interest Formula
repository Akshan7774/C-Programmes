ci8 =  P * pow(1 + (r / 100), 8);
ci9 =  P * pow(1 + (r / 100), 9);
ci10 =  P * pow(1 + (r / 100), 10);

cout << fixed << setprecision(2);


cout<<"Final amount after " <<t<<" years = " <<A<<endl; 

if (yearbreakdown == "yes"|| yearbreakdown == "Yes" || yearbreakdown == "YES"); 

{
    
cout<< " Year 1 = "<<ci1<<endl; 
