/* c++ calculator 
allows decimal numbers 
4 operations (+,-,/,*)
*/

#include <iostream>
using namespace std;

int main ()
{
string operation;
double number1;
double number2;

cout << " Enter First Number: ";
cin >> number1;

cout << " Enter Operation (+,-,/,*):";
cin >> operation;

cout << " Enter Second Number:";
cin >> number2;

if(operation == "+"){

cout << number1 + number2;

} else if (operation =="-"){

cout << number1 - number2;

}else if(operation == "/"){

cout << number1 / number2; 

}else if (operation =="*"){

cout << number1 * number2;
}

else {

cout << "Not a recognized operation, 'please enter +, -, / or *'. ";
}

return 0;
}
